# ============================================
# SOMPO Harici Avukat ve Arabulucu UygulamasÄ±
# Environment Configuration Template
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# ============================================
# Environment
# ============================================
# Options: development, production, test, staging
NODE_ENV=development

# ============================================
# API Configuration
# ============================================
# Backend API base URL
# Development: http://localhost:8080
# Production: https://api.sompo.com.tr
VUE_APP_API_BASE_URL=http://localhost:8080

# API request timeout in milliseconds
# Recommended: 30000 (30 seconds) for development
# Production: 10000 (10 seconds)
VUE_APP_API_TIMEOUT=30000

# Enable/disable API request logging
# true: Log all API requests (development only)
# false: No logging (production)
VUE_APP_ENABLE_LOGGING=true

# ============================================
# Backend Integration Endpoints
# ============================================
VUE_APP_DISPATCH_ENDPOINT=/sigorta/dispatch
VUE_APP_CAPTCHA_ENDPOINT=/sigorta/simpleCaptcha.png

# ============================================
# Development Features
# ============================================
# Enable debug mode (development only)
# WARNING: Disable in production for security
VUE_APP_DEBUG_MODE=true

# Log level: error, warn, info, debug
# Production: error, warn
# Development: debug
VUE_APP_LOG_LEVEL=debug

# ============================================
# Authentication & Security
# ============================================
# Session timeout in milliseconds
# Default: 28800000 (8 hours)
VUE_APP_AUTH_SESSION_TIMEOUT=28800000

# Enable/disable captcha verification
VUE_APP_CAPTCHA_ENABLED=true

# ============================================
# Performance & Monitoring
# ============================================
# Enable Web Vitals monitoring
# true: Track performance metrics
# false: Disable tracking
VUE_APP_ENABLE_WEB_VITALS=true

# Google Analytics tracking ID (optional)
# Leave empty if not using GA
# VUE_APP_GA_TRACKING_ID=

# ============================================
# Feature Flags
# ============================================
# Enable dark mode
VUE_APP_ENABLE_DARK_MODE=true

# Enable PWA features
VUE_APP_ENABLE_PWA=true

# ============================================
# Security Notes
# ============================================
# - Never commit .env files containing secrets
# - Use different values for development/production
# - Rotate API keys regularly
# - Use HTTPS in production
# - Enable CSP headers in production
# - Review and update security settings regularly
